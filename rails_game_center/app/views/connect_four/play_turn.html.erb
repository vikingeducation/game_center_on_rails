<main>

  <div class ="row">
    <h1>Connect Four</h1>
      <h4>Choose which column to drop your tile into:</h4>
  </div>

  <div class ="row" role="game_board" >
    <div class = "col-md-6 col-md-offset-3">
      <div class = "row">
      <%= form_tag connect_four_drop_piece_path, method: "post" do%>
          <div class = "col-md-12">
            <!--0 upto 6 do radio button tag-->
            <% 0.upto(@num_cols-1) do |col| %>
              <% if @board_arr[col].none? { |cell| cell == "_"} %>
                <%= radio_button_tag :column, col, false, :disabled => true %>
              <% else %>
                <%= radio_button_tag(:column, col, false) %>
              <% end %>
            <% end %>
        </div>

        <%= render "board"%><!-- BOARD GOES HERE-->

        <div class = "col-md-12">
          <%= submit_tag "Drop!", class: "btn btn-primary" %>
        </div>
      <% end %>

        <div class = "col-md-4 col-md-offset-4 restart">
          <%= link_to "Restart", connect_four_new_path, class: "restart-link"%>
        </div>
        </div>

      </div>
    </div>
  </div>

</main>
