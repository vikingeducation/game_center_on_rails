<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= render partial: 'shared/gameboard', locals: { board: board, color: color, cpu: cpu } %>
      <form action="<%= game_path %>" method="post">
        <% 7.times do |i| %>
          <input type="radio" class="col-select" name="col" value="<%= i %>">
        <% end %>
        <input type="hidden"
                 name="authenticity_token"
                 value="<%= form_authenticity_token %>">
        <input name="_method" type="hidden" value="patch" />
        <div>
          <button class="btn btn-primary" type="submit">Place Piece</button>
        </div>
      </form>
    </div>
  </div>
</div>

