<main>

  <div class ="row">
    <h1>Connect Four</h1>
     <%= render "subtitle" %>
  </div>

  <div class ="row" role="game_board" >
    <div class = "col-md-6 col-md-offset-3">
      <div class = "row">
      <%= form_tag connect_four_drop_piece_path, method: "post" do%>
          <div class = "col-md-12">
        </div>

     <%= render partial: 'board', locals: {num_rows: @num_rows, num_cols: @num_cols, board: @board_arr} %>

        <div class = "col-md-12">
          <%= submit_tag "Drop!", class: "btn btn-primary" %>
        </div>
      <% end %>

        <div class = "col-md-4 col-md-offset-4 restart">
          <%= link_to "Restart", connect_four_new_path, class: "restart-link"%>
        </div>
        </div>

      </div>
    </div>
  </div>

</main>
