<p>
  Board HERER
</p>
<div class="container">

  <div class="col-sm-10 col-sm-offset-1 text-center">
    <table>
      <% 5.downto(0) do |rows| %>
        <tr>
          <% 0.upto(6) do |cols|  %>
            <td>
              <% if @active_board[rows][cols].nil? %>
                  <%= " " %>
              <% else %>
                <div class="<%= @active_board[rows][cols]  %>">
                </div>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
      <tr>
        <%= form_tag(connect_fours_path, :method => "post") do %>
          <% 7.times do |cols| %>
          <td>
            <%unless @board.col_full?(cols)%>
              <%= radio_button_tag(:column, cols)%>
            <%end%>
          </td>
        <% end%>
      </tr>
    </table>
        <%= submit_tag("Enter move") %>
    <%end%>
</div>
