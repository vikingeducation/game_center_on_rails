<h1>Blackjack</h1>

<h3>Dealer's Cards</h3>
<p>
  <% @dealer.hand.each do |card| %>
  <%= card.name %></br>
  <% end %>
  <strong>Total: <%= @dealer.hand_value %></strong>
</p>

<h3>Your Cards</h3>
<p>Bankroll: $<%= @player.bankroll %> | Bet: $<%= @bet %></p>
<p>
  <% @player.hand.each do |card| %>
  <%= card.name %></br>
  <% end %>
  <strong>Total: <%= @player.hand_value %></strong>
</p>

<hr>

<% unless @game_over %>
  <%= render partial: "blackjack/game_play_actions", locals: { player: @player } %>
<% end %>

<% if @game_over %>
  <%= render partial: "blackjack/game_over", locals: { winner: winner } %>
<% end %>