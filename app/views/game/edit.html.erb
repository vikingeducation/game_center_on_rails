
<% @board.each do |row| %>
  <% row.each do |cell| %>
    <%= cell.nil? ?  "|__" : "|_#{cell}_" %>
  <% end %>|
  <br>
<% end %>
<p>-----------------------------</p>
<p>| 1 | 2 | 3 | 4 | 5 | 6 | 7 |</p>


<form id='edit_board' accept-charset="UTF-8"
  action="/drop_piece" method='post'>
  <input  type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

  <input name="_method" type="hidden" value="patch" />

  <% 7.times do |i| %>
  -
  <%=radio_button_tag(:col, i.to_s ) %>

  <% end %>

  <input name='commit' type='submit'
        value="Drop Piece!">
</form>
